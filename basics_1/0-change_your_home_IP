#!/usr/bin/env bash
# Скрипт для изменения IP localhost на 127.0.0.2 и facebook.com на 8.8.8.8

# Изменяем IP localhost
sudo sed -i 's/^127.0.0.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Удаляем старую запись для facebook.com, если она есть
sudo sed -i '/facebook\.com/d' /etc/hosts

# Добавляем новую запись для facebook.com
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
